<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_lua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="lua"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_gif_widget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="gif_widget"
        android:textAllCaps="false"
        app:layout_constraintLeft_toRightOf="@id/btn_lua"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_constraints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_lua"
        android:text="test_constraintLayout"/>
    <Button
        android:id="@+id/btn_web"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="btn_web"
        app:layout_constraintTop_toBottomOf="@id/btn_constraints"
        app:layout_constraintLeft_toLeftOf="parent" />
        app:layout_constraintTop_toBottomOf="@id/btn_lua" />

    <Button
        android:id="@+id/btnIme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="btn_ime"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_web" />
    <Button
        android:id="@+id/btnShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="btnShare"
        app:layout_constraintTop_toBottomOf="@id/btnIme"
        app:layout_constraintLeft_toLeftOf="parent" />

    <RelativeLayout
        android:id="@+id/rl_container"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="#BBBBBB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingRight="15dp"
            android:text="哈哈哈哈哈哈哈哈哈哈哈哈或哈哈哈哈哈哈哈" />

        <View
            android:id="@+id/view_tag"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignRight="@id/tv_name"
            android:background="#BB0000" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>